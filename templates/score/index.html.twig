{% extends 'base.html.twig' %}

{% block title %}Scoreboard{% endblock %}

{% block body %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Last riddle</th>
                <th scope="col">Riddles solved</th>
                <th scope="col">Score</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{user.username}}</td>
                <td>{{user.scores[0] is defined ? (user.scores|last).riddle : ""}}</td>
                <td>{{user.scores|length}}</td>
                <td>{{user.currentScore}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
