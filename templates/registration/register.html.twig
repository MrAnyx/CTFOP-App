{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}


<div class="container mt-4">
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>

    {{ form_start(registrationForm) }}
    <div>
        {{ form_label(registrationForm.username, 'Username', {
            'label_attr': {
                'for': 'username'
            }
        }) }}


        {{ form_widget(registrationForm.username, {
            'attr': {
                'class': 'form-control',
                'id': 'username'
            }
        }) }}

        {% if registrationForm.username.vars['errors']|length > 0 %}
            <div class="mt-2">
                <span class="error-indicator bg-danger">ERROR</span>
                <span class="error-message text-danger">{{ registrationForm.username.vars['errors'][0].message }}</span>
            </div>
        {% endif %}
    </div>

    <div>
        {{ form_label(registrationForm.plainPassword, 'Password', {
            'label_attr': {
                'for': 'password'
            }
        }) }}


        {{ form_widget(registrationForm.plainPassword, {
            'attr': {
                'class': 'form-control',
                'id': 'password'
            }
        }) }}

        {% if registrationForm.plainPassword.vars['errors']|length > 0 %}
            <div class="mt-2">
                <span class="error-indicator bg-danger">ERROR</span>
                <span class="error-message text-danger">{{ registrationForm.plainPassword.vars['errors'][0].message }}</span>
            </div>
        {% endif %}
    </div>


    <button class="btn btn-lg btn-primary mt-3" type="submit">
        Register
    </button>
    {{ form_end(registrationForm) }}





</div>
{% endblock %}
